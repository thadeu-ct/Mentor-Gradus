{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": [
          "api/dados/**",
          "api/dados.py",
          "api/__init__.py"
        ]
      }
    },
    {
      "src": "**/*.{html,css,js}",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.py" }
  ]
}